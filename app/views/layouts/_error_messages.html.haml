- if object.errors.any?
  = debug(params) if Rails.env.development?
  #error_explination
    The form contains #{pluralize(object.errors.count, "error")}
    %ul
      - object.errors.full_messages.each do |msg|
        %li *  #{msg}
- if flash.any?
  = debug(params) if Rails.env.development?
  - flash.each do |name, msg|
    .flash{:class => 'flash-name'}
      = msg